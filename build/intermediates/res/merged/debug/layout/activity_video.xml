<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <TextView
        android:layout_width="383dp"
        android:layout_height="65dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/theLargeTextView" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Video"
        android:onClick="chooseVideo"
        android:id="@+id/button2"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/videoTextView"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/drawing_view"
        android:layout_toEndOf="@+id/drawing_view" />

    <com.manavdutta1.affdexdemo.DrawingView
            android:layout_width="230dp"
            android:layout_height="401dp"
            android:id="@+id/drawing_view"
        android:layout_weight="2.19"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
</LinearLayout><!-- From: file:/Users/manavdutta1/Downloads/of_v0.9.8_android_release/examples/android/androidEmptyExample/res/layout/activity_video.xml -->